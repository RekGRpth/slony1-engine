AROPT = crs
export_dynamic = -Wl,-E
rpath = -Wl,-rpath,$(pglibdir)
shlib_symbolic = -Wl,-Bsymbolic
allow_nonpic_in_shlib = yes
DLSUFFIX = .so

ifeq "$(findstring sparc,$(host_cpu))" "sparc"
CFLAGS_SL = -fPIC
else
CFLAGS_SL = -fpic
endif

%.so: $(SO_OBJS)
	$(CC) -shared -o $@ $<

%.o: %.c
	$(CC) $(CFLAGS) $(CPPFLAGS) -c -o $@ $<

sqlmansect = 7
